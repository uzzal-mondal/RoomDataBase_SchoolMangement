<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"


    app:cardElevation="8dp"
    android:layout_margin="20dp"
    android:padding="5dp"
    app:cardCornerRadius="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cosntrint_layout_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView_row_id"
            android:layout_width="298dp"
            android:layout_height="18dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="by default - 10"
            android:textAlignment="center"
            android:textSize="16sp"

            app:layout_constraintRight_toLeftOf="@+id/textView2_row_id"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"


            />


        <TextView
            android:id="@+id/textView2_row_id"
            android:layout_width="31dp"
            android:layout_height="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:text="10"
            android:textAlignment="center"
            app:layout_constraintLeft_toRightOf="@+id/textView_row_id"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
             />

        <ImageView
            android:id="@+id/image1_row_id"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/student264"

            android:padding="8dp"



            app:layout_constraintRight_toLeftOf="@+id/image2_row_id"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView_row_id"

            />

        <ImageView
            android:id="@+id/image2_row_id"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            app:srcCompat="@drawable/student464"


            android:padding="8dp"


            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"

            app:layout_constraintRight_toLeftOf="@+id/image3_row_id"
            app:layout_constraintLeft_toRightOf="@id/image1_row_id"
            app:layout_constraintTop_toBottomOf="@id/textView_row_id"

           />


        <ImageView
            android:id="@+id/image3_row_id"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/student164"
            android:layout_marginEnd="60dp"

            android:padding="8dp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/image2_row_id"
            app:layout_constraintTop_toBottomOf="@+id/textView_row_id"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>