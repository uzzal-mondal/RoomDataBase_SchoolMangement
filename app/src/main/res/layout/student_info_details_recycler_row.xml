<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    app:cardElevation="8dp"
    app:cardCornerRadius="8dp"
    android:layout_margin="8dp"

    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--    recycler nile, then eta amar akta layout -->


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:padding="5dp"

        >

        <TextView
            android:id="@+id/textName_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="20dp"
            android:text="Student Name: "


            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            />

        <TextView
            android:id="@+id/textRoll_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:text="Roll: "
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textName_id" />

        <TextView
            android:id="@+id/textSpinnerClass_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="10dp"
            android:text="Spinner class: "
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/textAdress_id"
            app:layout_constraintLeft_toRightOf="@id/textRoll_id"
            app:layout_constraintTop_toBottomOf="@id/textName_id" />




        <TextView
            android:id="@+id/textAdress_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"

            android:layout_marginTop="5dp"
            android:layout_marginEnd="15dp"
            android:text="Address: "
            android:padding="2dp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textRoll_id"
            />





    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>